{% extends "ACContactBundle:Default:layout.html.twig" %}
{% block title %}
    Contact
{% endblock %}
{% block header %}
    <a href="{{ path('ac_contact_accueil') }}">Accueil</a>
    <h1>Formulaire de contact</h1>
{% endblock %}
{% block body %}
    {{ form_start(form) }}
    <div class="">
        <div>
            <label>Nom</label>
            {{ form_widget(form.nom) }}
        </div>
        <div>
            <label>Email</label>
            {{ form_widget(form.email) }}
        </div>
        {% for demande in form.demande %}
            <div>
                <label>Question</label><br>
                {{ form_widget(demande.demande) }}
            </div>
            {% do demande.traite.setRendered %}
        {% endfor%}
    </div>
    <button type="submit">Valider</button>
    {{ form_end(form) }}
{% endblock %}
