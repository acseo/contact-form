{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}
<div class="col py-3">
<div class="d-flex justify-content-center">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes déjà connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <h1 class="h3 mb-5 text-center font-weight-normal">Connexion à votre espace</h1>

    <label for="inputUsername">Nom d'utilisateur</label>
    <div class=" row">
        <div class="col-sm-10">
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mb-2" autocomplete="username" required autofocus>
        </div>
    </div>
    <label for="inputPassword">Mot de passe</label>
    <div class=" row">
        <div class="col-sm-10">
            <input type="password" name="password" id="inputPassword" class="form-control mb-5" autocomplete="current-password" required>
        </div>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class=" row">
        <div class="col-sm-10">
            <button class="btn btn-lg btn-primary w-100" type="submit">
                Se connecter
            </button>
        </div>
    </div>
</form>
</div>
</div>
{% endblock %}
