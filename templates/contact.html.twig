
{% extends "base.html.twig" %}
{% block body %}
<div class="col py-3">
<h1 class="text-center mb-5">Contactez-nous</h1>
 {{ form_start(our_form) }}
        <div class="form-group row mb-2">
            {{ form_label(our_form.nom, 'Nom', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(our_form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row mb-2">
            {{ form_label(our_form.email, 'Email', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(our_form.email, {'attr': {'class': 'form-control', 'placeholder' : 'example@gmail.com'}}) }}
            </div>
        </div>
        <div class="form-group row mb-2">
             {{ form_label(our_form.message, 'Votre demande', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
             
            <div class="col-sm-10">
                {{ form_widget(our_form.message, {'attr': {'class': 'form-control'}}) }}
                <small id="help" class="form-text text-muted d-inline">500 caract√®res max.</small>
            </div>
        </div>
        <div class="form-group text-end mb-5">
            <input type="submit" value="Envoyer" class="btn btn-primary col-10">
        </div>
        {{ form_end(our_form) }}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
            <strong>{{ message }}</strong> 
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
</div>
{% endblock %}