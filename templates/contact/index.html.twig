{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}
{% form_theme contactForm 'bootstrap_5_layout.html.twig' %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <div class="container">
        <div id="contact-div"  class="row justify-content-md-center">
            <div class="col col-md-4">
                <h1 class="jumbotron-heading">Contactez nous !</h1>
                {{ form_start(contactForm) }}

                <div class=" text-error">
                    {{ form_errors(contactForm) }}
                </div>
                <div class="form-group">
                    {{ form(contactForm) }}
                </div>


                {{ form_end(contactForm) }}

            </div>
        </div>
    </div>


 </div>


{% endblock %}
